<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#00AA00">
    <TextView
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:text="New Quiz"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:clickable="false"
            android:fontFamily="sans-serif-black" android:id="@+id/textView" app:autoSizeTextType="none"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.454"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nameText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/nameSubmit" android:layout_marginEnd="7dp"
    />
    <Button
            android:text="Start Quiz"
            android:layout_width="0dp"
            android:layout_height="46dp" android:id="@+id/nameSubmit"
            style="@style/Widget.AppCompat.Button.Small"
            android:background="#FFFF55" app:layout_constraintBaseline_toBaselineOf="@+id/nameText"
            app:layout_constraintStart_toEndOf="@+id/nameText" android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="startQuiz"
    />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#00AA00">
    <TextView
            android:layout_width="105dp"
            android:layout_height="39dp"
            android:text="Minecraft Quiz"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:clickable="false"
            android:fontFamily="sans-serif-black" android:id="@+id/textView" app:autoSizeTextType="none"
            app:layout_constraintVertical_bias="0.453"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Start Quiz"
            android:layout_width="0dp"
            android:layout_height="48dp" android:id="@+id/nameSubmit"
            style="@style/Widget.AppCompat.Button.Small"
            android:background="#FFFF55"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="startQuiz"
            app:layout_constraintTop_toBottomOf="@+id/nameTextFather"
            app:layout_constraintStart_toEndOf="@+id/nameText" android:layout_marginBottom="323dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/nameTextFather" android:layout_marginBottom="343dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/nameSubmit"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent">

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="Name"
            android:id="@+id/nameText" app:layout_constraintBaseline_toBaselineOf="@+id/nameSubmit"
            app:layout_constraintEnd_toStartOf="@+id/nameSubmit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" android:layout_marginEnd="7dp"
            tools:ignore="TouchTargetSizeCheck"/>


</androidx.constraintlayout.widget.ConstraintLayout>